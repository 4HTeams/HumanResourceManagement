            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
