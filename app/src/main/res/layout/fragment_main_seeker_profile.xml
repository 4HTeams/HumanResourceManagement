<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.MainSeekerProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20px"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15px"
                android:background="#000000"
                android:padding="2px"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imgProfileMainSeeker"
                    android:background="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View CV"
                    android:fontFamily="monospace"
                    android:id="@+id/btnViewCVInfoSeekerPro"
                    android:layout_weight="1"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post CV"
                    android:fontFamily="monospace"
                    android:id="@+id/btnPostCVInfoSeekerPro"
                    android:layout_weight="1"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upgrade"
                    android:fontFamily="monospace"
                    android:id="@+id/btnUpgradeToCom"
                    android:layout_weight="1"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:fontFamily="monospace"
                    android:id="@+id/btnChangeInfoSeekerPro"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <Button
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:fontFamily="monospace"
                android:background="#da0000"
                android:textColor="#ffffff"
                android:id="@+id/btnSignOutSeekerPro"
                android:layout_margin="30px"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
