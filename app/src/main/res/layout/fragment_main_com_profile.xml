<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.MainComProfile">

    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"
        android:id="@+id/imgProfileMainCom"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:background="#da0000"
        android:textColor="#ffffff"
        android:id="@+id/btnSignOutComPro"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Company Info"
        android:id="@+id/btnEditProComPro"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Account"
        android:id="@+id/btnEditUserComPro"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Job"
        android:id="@+id/btnPostJobProComPro"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Job"
        android:id="@+id/btnViewJobProComPro"
        />

</LinearLayout>
